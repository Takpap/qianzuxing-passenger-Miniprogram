#nav {
  height: 44px;
  display: flex;
  align-items: center;
}

#nav image {
  width: 30px;
  height: 28px;
  padding-left: 13px;
}

#nav #title {
  font-size: 20px;
  color: white;
  transform: translateX(-43px);
  margin: 0 auto;
  line-height: 44px;

}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start;
  margin: 50rpx 30rpx 20rpx;
  padding: 40rpx 0 15rpx;
  background: white;
  border-radius: 20px;
  box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, .3);
}

#backHeader {
  position: absolute;
  z-index: -1;
  background-color: #204051;
  width: 100%;
  height: 350rpx;
}

#userAvatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  justify-content: center;
}

.body {
  display: flex;
  flex-direction: column;
  margin-left: 25px;

}

.item label:first-child {
  display: inline-block;
  width: 210rpx;
}

.item:nth-child(1) {
  padding: 70rpx 0rpx;
}

.item input {
  display: inline-block;
}

.body .item {
  font-size: 37rpx;
  padding-bottom: 50rpx;
  display: flex;
  align-items: center;
}

.tip {
  margin: 35rpx 40rpx 0;
  display: flex;
  flex-wrap: nowrap;
}

.tip image {
  width: 32px;
  height: 32px;
}

.tip-text view {
  margin-left: 5px;
  width: 100%;
  color: #888;
}
.tip-text view:last-child{
  margin-top: 5px;
}

.login {
  margin-top: 60rpx;
  padding: 0 40rpx;
}

.login button {
  background: #204051;
  color: white;
}