
page {
  height: 100%;
  /* background-color: rgb(246, 246, 246); */
}

.container {
  display: flex;
  flex-direction: column;
  padding: 25rpx 15rpx;
}

.header {
  color: rgb(80, 80, 80);
  font-size: 35rpx;
  background-color: white;
  padding-bottom: 30rpx;
  box-shadow: 0px 2px 5px #888888;
  border-radius: .5rem;
}

.place-title {
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  margin-top: 30rpx;
  margin-left: 20rpx;
}

.place-title text {
  margin-left: 20px;
}

.plot {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.plot.one {
  background-color: rgb(59, 105, 120);
}

.plot.two {
  background-color: rgb(216, 30, 6);
}

.plot::after {
  position: absolute;
  height: 100%;
  width: 100%;
  border-radius: 50%;
  animation: twinkle 3s ease-out infinite;
}

.plot.one::after {
  content: "";
  background-color: rgb(59, 105, 120);
}

.plot.two::after {
  content: "";
  animation-delay: .4s;
  background-color: rgb(216, 30, 6);
}

@keyframes twinkle {

  50%,
  75% {
    transform: scale(1.5);
  }

  80%,
  100% {
    opacity: 0;
  }
}

.passengers {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 20rpx;
  color: #888888;
}

.count-title {
  padding: 15rpx 0rpx;
}

.count {
  flex: 1;
  text-align: center;
  padding: 15rpx 0rpx;
}

.count:nth-child(2) {
  margin-left: 15rpx;
}

.count:nth-child(5) {
  margin-right: 15rpx;
}

.count.active {
  background-color: #3b6978;
  border-radius: .5rem;
  color: white;
  font-weight: bold;
}

#car-btn {
  margin-top: 45rpx;
  background-color: #3b6978;
  width: 100%;
  height: 100%;
  padding: 25rpx 0rpx;
  border-radius: .5rem;
  color: white;
  box-shadow: 0px 0px 5px #3b6978;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  transition: all 1s ease-out;
}

.order {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}
.order .loading{
  display: flex;
  flex-direction: row;
  padding-bottom: 5rpx;
}
.order text{
  margin-right: 5rpx;
}
.loadplot{
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  border-radius: 50%;
  margin-left: 12rpx;
}
.loadplot.load1{
  animation: loading 1.5s .2s infinite;
}
.loadplot.load2{
  animation: loading 1.5s .4s infinite;
}
.loadplot.load3{
  animation: loading 1.5s .6s infinite;
}
@keyframes loading{
  0%,100%{
    opacity: 0;
    transform: translateY(0rpx);
  }
  50%{
    opacity: 1;
    transform: translateY(1px);
  }
}