/* pages/testpage/testpage.wxss */
.container {
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.top-nav {
    height: 44px;
    background-color: #204051;
    display: flex;
}

.top-nav image {
    padding: 12px 12px 0 20px;
    width: 20px;
    height: 20px;
}

.top-nav text {
    line-height: 44px;
    font-size: 20px;
    color: white;
}

.header{
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    padding: 20px 10px;
    padding-left: 20px;
    /* background-color:  rgb(233, 233, 233); */
    background-color: #204051;
    border-radius: 1rem 1rem;
    box-sizing: border-box;
    margin: 20px 10px;
    box-shadow: 0px 2px 8px #204051;

}
.header .picker{
    color: white;
    font-size: 35rpx;
    font-weight: 5500;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    margin-bottom: 10px;
}
.header input{
    padding: 20rpx 0rpx;
    color: white;
    font-size: 35rpx;
}

.content-item {
    display: flex;
    padding: 10px 10px;
    padding-left: 40rpx;
    border-bottom: 2px solid rgb(235, 235, 235);
}

.content-item .content-place {
    margin-left: 40rpx;
    color: rgb(82, 82, 82);
}
